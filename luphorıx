  <script>
    function addSmoke(element) {
      const smoke = element.querySelector('.smoke');
      smoke.style.opacity = '0';
      smoke.style.animation = 'none';
      void smoke.offsetWidth;
      smoke.style.animation = 'smoke 1s ease-out forwards';
    }
